{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",

    "moduleResolution": "node",
    //"allowJs": true,

    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "declaration": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,

    "strict": false,

    //"forceConsistentCasingInFileNames": true,

    "locale": "zh-TW",
    "pretty": true,

    "baseUrl": ".",
    "sourceRoot": ".",
    "rootDir": ".",
    "outDir": ".",

    "traceResolution": true,
    "newLine": "lf"
  },

  "exclude": [
    "node_modules"
  ]
}
