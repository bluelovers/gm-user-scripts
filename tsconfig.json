{
  "extends": "@bluelovers/tsconfig",
  "compilerOptions": {
    "allowJs": true,

    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "baseUrl": ".",
    "sourceRoot": ".",
    "rootDir": ".",
    "outDir": ".",

    "paths": {
      "root/src/*": [
        "./src/*"
      ],
      "root/*": [
        "./*"
      ]
    }
  }
}
