{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",

    "moduleResolution": "node",
    "allowJs": true,

    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "declaration": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,

    "strict": false,

    //"forceConsistentCasingInFileNames": true,

    "locale": "zh-TW",
    "pretty": true,

    "removeComments": true,

    "baseUrl": ".",
    "sourceRoot": ".",
    "rootDir": ".",
    "outDir": ".",

    "paths": {
      "root/src/*": [
        "./src/*"
      ],
      "root/*": [
        "./*"
      ],
      "~/*": [
        "./*"
      ]
    },

    "traceResolution": true,
    "newLine": "lf"
  },

  "exclude": [
    "node_modules"
  ]
}
